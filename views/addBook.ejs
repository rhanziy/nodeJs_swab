<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>swab</title>
    <link href="/css/cover.css" type="text/css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://kit.fontawesome.com/734a7daae5.js" crossorigin="anonymous"></script>
</head>
<style>
  input[type="file"] {
    display: none;
  }

  .fileLabel {
    display:block;
    min-width: 150px;
    height:150px;
    margin-right: 5px;
    color: #8d8d8d;
    font-size:20px;
    text-align: center;
    line-height:150px;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    cursor: pointer;
    user-select: none;
    transition: 0.2s ease-in;
  }
  .fileLabel:hover {
    background-color: #e2e2e2;;
  }

  #img-preview div {
    width: 150px;
    min-width: 150px;
    height:150px;
    margin: 0 5px;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
  }
  #img-preview div:last-child{
    margin-right:0;
  }
  #del{
    float: right;
    width:25px;
    height:25px;
    margin:5px;
    font-size: 14px;
    background: rgba(0, 0, 0, 0.5);
    color:#fff;
    border:none;
    border-radius: 50%;
  }
  .warn {
    display: none;
    color:#df423c;
    font-size:13px;
  }
</style>
<body>
    <div class="container py-2">
    <%- include('nav.ejs')%>

    
    <main>
      <h4 class="mt-5 text-center"><strong>책 등록하기</strong></h4>

      <div class="d-flex my-5 mx-auto justify-content-center" style="max-width:700px;">
        <form action="/upload" method="POST" enctype="multipart/form-data" style="width:90%;">
          <div id="img-preview" class="mt-2 d-flex">           
            <input type="file" id="file" name="file" accept=".jpg, .jpeg, .png"  class="form-control mt-1" multiple>
            <label class="fileLabel" for="file"> + </label>
          </div>
          <div class="mt-2">
            <label>제목</label>
            <input type="text" name="title" class="form-control mt-1">
            <span class="title_warn warn">제목을 입력해주세요.</span>
          </div>
          <div class="mt-2">
            <label>작가</label>
            <input type="text" name="author" class="form-control mt-1">
            <span class="author_warn warn">작가를 입력해주세요.</span>
          </div>
          <div class="mt-2">
            <label>카테고리</label>
            <select name="cate" class="form-select mt-1" aria-label="Default select example">
              <option selected>선택</option>
              <option value="01">국내도서</option>
              <option value="02">외국도서</option>
            </select>
            <span class="cate_warn warn">카테고리를 설정해주세요.</span>
          </div>
          <button type="button" id="add" class="btn btn-outline-secondary mt-3">등록</button>
        </form>
      </div>    
        
    </main>
    
    <%- include('footer.html')%>
    </div>


    <script>

      let titleCheck = false;
      let authorCheck = false;
      let cateCheck = false;

      $('#file').click(()=>{
        if($('#img-preview div').length >= 3) {
          alert('사진은 3장까지 업로드할 수 있습니다.'); 
          return false;
        }
      });

      $(document).on('click', '#del', function(e){
        e.currentTarget.parentElement.remove();
      });


      
      $('#file').change(function(){
        const files = this.files;
        

        if(files.length > 3 || $('#img-preview div').length + files.length > 3) {
          alert('사진은 3장까지 업로드할 수 있습니다.');
          return false;
        }

        // 미리보기
        for (i of files){
          let reader = new FileReader();
          reader.onload=()=>{
            $('#img-preview').append(`
              <div style="background : url(${reader.result}) no-repeat; background-size : cover">
                <button id="del" type="button"><i class="fas fa-times"></i></button>
              </div>
            `)
          }
          reader.readAsDataURL(i);
        }
      })


      // form 유효성 검증
      $('#add').click(function(){
          
        const title = $("input[name='title']");
        const author = $("input[name='author']");
        const cate = $("select[name='cate']");

        console.log(title, author, cate)

        if(title.val() == ''){
          title.focus();
          $('.title_warn').css('display', 'block');
          titleCheck = false;
        } else {
          $('.title_warn').css('display', 'none');
          titleCheck = true;
        }

        if(author.val() == ''){
          author.focus();
          $('.author_warn').css('display', 'block');
          authorCheck = false;
        } else {
          $('.author_warn').css('display', 'none');
          authorCheck = true;
        }


        if(cate.val() == '선택'){
          cate.focus();
          $('.cate_warn').css('display', 'block');
          cateCheck = false;
        } else {
          $('.cate_warn').css('display', 'none');
          cateCheck = true;
        }


        if(titleCheck && authorCheck && cateCheck) {
          $('form').submit();
        }
      });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>